<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/name1"
            android:layout_width="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/blake"
            android:layout_marginLeft="8dp"
            android:textSize="@dimen/sp_16"
            android:layout_marginStart="8dp"
           android:layout_toRightOf="@+id/touxiang"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/touxiang"
            android:scaleType="fitXY"
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="@dimen/sp_16"
            android:layout_width="50dp"
            android:layout_height="50dp" />


    <TextView
        android:background="@drawable/bg_chat_b"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:gravity="left"
        android:layout_marginTop="6dp"
        android:paddingTop="16dp"
        android:layout_marginRight="100dp"
        android:paddingLeft="22dp"
        android:layout_below="@+id/name1"
        android:paddingBottom="16dp"
        android:paddingRight="10dp"
        android:visibility="gone"
        android:layout_toRightOf="@+id/touxiang"
        android:id="@+id/content1"
        android:layout_marginLeft="@dimen/sp_16"
        android:textColor="@color/blake"
        android:layout_height="wrap_content" />

    <TextView
        android:background="@drawable/bg_chat_w"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:gravity="right"
        android:layout_marginTop="6dp"
        android:paddingTop="16dp"
        android:paddingRight="22dp"
        android:paddingLeft="10dp"
        android:paddingBottom="16dp"
        android:layout_below="@+id/name2"
       android:visibility="gone"
       android:layout_toLeftOf="@+id/touxiang2"
        android:id="@+id/content2"
        android:layout_marginLeft="100dp"
        android:textColor="@color/blake"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/name2"
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
       android:layout_marginRight="8dp"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/blake"
        android:layout_marginEnd="8dp"
       android:layout_toLeftOf="@+id/touxiang2"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/touxiang2"
        android:scaleType="fitXY"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
       android:layout_marginRight="@dimen/sp_16"
        android:layout_width="50dp"
        android:layout_height="50dp" />

</RelativeLayout>