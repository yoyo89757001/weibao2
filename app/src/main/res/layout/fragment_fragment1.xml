<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F9"
    tools:context="com.examples.weibao.fargments.Fragment1">

    <LinearLayout
        android:id="@+id/top_ll"
        android:orientation="vertical"
        android:background="@color/BLUE"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center_horizontal"
            android:id="@+id/touxiang"
            android:scaleType="fitXY"
            android:src="@drawable/tuijianyisheng"
            android:layout_marginTop="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:id="@+id/name"
               android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_below="@+id/name"
                android:orientation="horizontal"
                android:layout_marginTop="2dp"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/zhiwu1"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginRight="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_below="@+id/name"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:layout_marginLeft="6dp"
                    android:id="@+id/zhiwu2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>



        </RelativeLayout>
    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="6dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">
            
           <LinearLayout
               android:orientation="vertical"
               android:layout_weight="2"
               android:id="@+id/l1"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:clickable="true"
               android:gravity="center"
               android:background="@drawable/card_background_selector"
               android:layout_width="match_parent"
               android:layout_height="0dp">

               <ImageView
                   android:src="@drawable/ic_01"
                   android:layout_gravity="center"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

               <TextView
                   android:text="维保与测试"
                   android:textSize="14sp"
                   android:layout_marginTop="6dp"
                   android:textColor="@color/blake2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content" />

           </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="2"
                android:id="@+id/l2"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:gravity="center"
                android:background="@drawable/card_background_selector"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:src="@drawable/ic_03"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="报障处理"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/blake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_weight="2"
                android:background="@drawable/card_background_selector"
                android:clickable="true"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_05"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="项目进度款"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/blake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/l4"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:clickable="true"
                android:background="@drawable/card_background_selector"
                android:orientation="vertical">
                <ImageView
                    android:src="@drawable/ic_07"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="上传本地维保信息"
                    android:textColor="@color/blake2"
                    android:textSize="14sp" />

            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/l5"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/card_background_selector"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:src="@drawable/ic_02"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="维保计划"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/blake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:id="@+id/l6"
                android:gravity="center"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/card_background_selector"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageView
                    android:src="@drawable/ic_04"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="维保报告"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/blake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginTop="5dp"
                android:id="@+id/l7"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:background="@drawable/card_background_selector"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_06" />

                <TextView
                    android:text="台帐管理"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/blake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:clickable="true"
                android:layout_marginTop="5dp"
                android:id="@+id/l8"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:background="@drawable/card_background_selector"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_08" />

                <TextView
                    android:text="下载最新维保信息"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/blake2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>
