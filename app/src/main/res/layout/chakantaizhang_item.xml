<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <TextView
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:id="@+id/content"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/sp_16"
            android:textColor="@color/blake2"
            android:layout_height="wrap_content" />

    <View
        android:background="@color/view_bg"
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/sp_16"
        android:layout_marginRight="@dimen/sp_16"
        android:layout_height="0.8dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/sp_16"
        android:layout_marginBottom="@dimen/sp_16"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:id="@+id/bianhao"
            android:maxLines="1"
            android:layout_toLeftOf="@+id/fff"
            android:text="dsadsadsa"
            android:layout_marginRight="@dimen/dp_10"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/sp_16"
            android:textColor="@color/blake2"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:id="@+id/weizhi"
            android:text="dsdsds"
            android:layout_marginTop="2dp"
            android:maxLines="2"
            android:layout_toLeftOf="@+id/fff"
            android:layout_below="@+id/bianhao"
            android:ellipsize="end"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="@dimen/sp_16"
            android:textColor="@color/blake2"
            android:layout_height="wrap_content" />


        <ImageView
            android:src="@drawable/ic_go"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/sp_16"
            android:id="@+id/fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>



</LinearLayout>