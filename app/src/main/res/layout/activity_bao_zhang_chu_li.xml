<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/top1"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.examples.weibao.ui.BaoZhangChuLiActivity">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/ii"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <include
        android:id="@+id/pp"
        layout="@layout/base_title"/>

    <include
        android:id="@+id/ooo"
        layout="@layout/activity_baozhang_top_tab"/>

        </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/id_page_vp"
        android:layout_above="@+id/dengji"
        android:layout_below="@+id/ii"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <View
        android:layout_below="@+id/id_page_vp"
        android:background="@color/view_bg"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/jiaohu"
        android:layout_marginBottom="8dp"
        android:text="保障登记"
        android:id="@+id/dengji"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="48dp" />

</RelativeLayout>
